model User {
  id        Int       @id @default(autoincrement())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model Achievement {
  id              Int     @id @default(autoincrement())
  achievementID   String  @unique @default("")
  achievementName String  @default("")
  rewardID        Reward? @relation("Achievement_rewardID", fields: [rewardIDId], references: [id])
  rewardIDId      Int?    @map("rewardID")

  @@index([rewardIDId])
}

model Reward {
  id                        Int           @id @default(autoincrement())
  rewardID                  String        @unique @default("")
  rewardName                String        @default("")
  reward                    String        @default("")
  from_Achievement_rewardID Achievement[] @relation("Achievement_rewardID")
  from_DailyQuest_rewardID  DailyQuest[]  @relation("DailyQuest_rewardID")
}

model DailyQuest {
  id         Int     @id @default(autoincrement())
  questID    String  @unique @default("")
  questName  String  @default("")
  rewardID   Reward? @relation("DailyQuest_rewardID", fields: [rewardIDId], references: [id])
  rewardIDId Int?    @map("rewardID")

  @@index([rewardIDId])
}

model Weapon {
  id           Int    @id @default(autoincrement())
  weaponID     String @unique @default("")
  weaponName   String @default("")
  attackPower  Int?
  shootTimeSec Float?
}

model Player {
  id             Int    @id @default(autoincrement())
  playerID       String @unique @default("")
  playerName     String @default("")
  wallet         String @default("")
  platformPoints Int?
}

model Level {
  id              Int    @id @default(autoincrement())
  levelID         String @unique @default("")
  levelName       String @default("")
  scanID          Scan?  @relation("Level_scanID", fields: [scanIDId], references: [id])
  scanIDId        Int?   @map("scanID")
  makerID         String @default("")
  gameObjectsInfo Json?

  @@index([scanIDId])
}

model Scan {
  id                Int     @id @default(autoincrement())
  scanID            String  @unique @default("")
  coordX            Float?
  coordY            Float?
  scan              String  @default("")
  from_Level_scanID Level[] @relation("Level_scanID")
}

model PowerUp {
  id           Int    @id @default(autoincrement())
  powerUpID    String @unique @default("")
  powerUpName  String @default("")
  attackBoost  Int?
  defenseBoost Int?
  healthBoost  Int?
  durationSec  Float?
}
